{
  "name": "react-offline-hybrid-boilerplate",
  "productName": "React Offline Hybrid Boilerplate",
  "version": "0.0.1",
  "description": "React Offline Hybrid Boilerplate with Electron and browser's offline resources, and PouchDB as database",
  "main": "main.js",
  "private": true,
  "scripts": {
    "clean-build": "rimraf build",
    "copy-files-web": "cpy app/favicon.ico build",
    "clean-and-copy-web": "npm run clean-build && npm run copy-files-web",
    "build-web": "npm run clean-and-copy-web && webpack --env.production --config webpack/web/production.js",
    "dev-web": "cross-env NODE_ENV=development PORT=8080 webpack-dev-server --progress --hot --inline --content-base dist --config=webpack/web/development.js",
    "copy-files": "cpy app/app.html app/package.json build",
    "clean-and-copy": "npm run clean-build && npm run copy-files",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test BABEL_DISABLE_CACHE=1 mocha --retries 2 --compilers css:./test/css-null-compiler.js,js:babel-register --recursive --require jsdom-global/register --require ./test/setup.js",
    "test:all": "npm test ./app/**/*.test.js",
    "test:watch": "npm run test:all -- --watch",
    "test:e2e": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 mocha --retries 2 --compilers js:babel-register --require ./test/setup.js ./test/e2e.js",
    "lint": "eslint --ignore-path .gitignore --format=node_modules/eslint-formatter-pretty app test *.js",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js ",
    "build:main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --env.production --config webpack/desktop/electron.js --profile",
    "build:renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack/desktop/production.js --profile",
    "build-desktop": "npm run clean-and-copy && npm run build:main && npm run build:renderer",
    "start": "cross-env NODE_ENV=production electron ./build/",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/main.development",
    "preinstall": "mkdir -p build",
    "postinstall": "concurrently \"install-app-deps\" \"node node_modules/fbjs-scripts/node/check-dev-engines.js package.json\"",
    "dev-desktop": "npm run hot-server -- --start-hot",
    "package": "npm run build-desktop && build --publish never",
    "package:win": "npm run build-desktop && build --win --x64",
    "package:linux": "npm run build-desktop && build --linux",
    "package:all": "npm run build-desktop && build -mwl",
    "cleanup": "mop -v"
  },
  "build": {
    "appId": "com.juliobetta.ReactOfflineBoilerplate",
    "category": "public.app-category.tools",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release",
      "app": "build"
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.org/juliobetta/react-offline-hybrid-boilerplate.git"
  },
  "author": {
    "name": "React Offline Hybrid Boilerplate",
    "email": "juliobetta@gmail.com",
    "url": "https://github.com/juliobetta"
  },
  "devDependencies": {
    "asar": "^0.12.3",
    "autoprefixer": "^6.4.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-tcomb": "^0.3.21",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-plugin-webpack-loaders": "^0.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.18.0",
