    "style-loader": "^0.13.1",
    "tcomb": "^3.2.15",
    "toolbox-loader": "0.0.3",
    "url-loader": "^0.5.7",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.9.0",
    "webpack-dev-server": "2.2.0",
    "webpack-hot-middleware": "2.16.1",
    "webpack-merge": "2.6.1",
    "webpack-validator": "2.3.0"
  },
  "dependencies": {
    "axios": "^0.9.1",
    "classnames": "^2.2.5",
    "electron-debug": "1.1.0",
    "invariant": "^2.2.1",
    "memdown": "^1.2.2",
    "normalize.css": "^4.2.0",
    "pouchdb": "6.1.1",
    "pouchdb-find": "^0.10.3",
    "pouchdb-quick-search": "^1.2.0",
    "react": "^15.3.0",
    "react-addons-css-transition-group": "^15.3.0",
    "react-addons-transition-group": "^15.3.0",
    "react-addons-update": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "react-toolbox": "^1.3.0",
    "redux": "^3.5.2",
    "redux-form": "^6.0.1",
    "redux-router": "^2.1.2",
    "redux-thunk": "^2.1.0",
    "source-map-support": "^0.4.6"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  }
}
